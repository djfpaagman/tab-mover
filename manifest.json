{
  "manifest_version": 2,

  "name": "Tab Mover (Move tabs with keyboard shortcuts)",
  "description": "Move your tabs around with keyboard shortcuts",
  "version": "1.0",
  "author": "Dennis Paagman",

  "icons": {
    "128": "icon-128.png",
    "64": "icon-64.png"
  },

  "background": {
    "scripts": ["tabMover.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab"
    ],

  "commands": {
    "move-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "move current tab left"
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "move current tab right"
    }
  }
}
